<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_above="@+id/btn_next_to"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/colorWhite"
        android:paddingBottom="@dimen/_8dp"
        android:paddingLeft="@dimen/_8dp"
        android:paddingRight="@dimen/_8dp"
        android:paddingTop="@dimen/_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/colorGrayDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max_2000_character"
                android:textSize="@dimen/_10sp" />

            <TextView
                android:id="@+id/txv_quality_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:text="1000"
                android:textColor="@color/colorRedLight" />

            <EditText
                android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_border_gray_backgroud_default"
                android:gravity="top|left"
                android:inputType="textMultiLine|textNoSuggestions"
                android:padding="@dimen/_8dp"
                android:scrollbars="vertical"
                android:textSize="@dimen/_10sp" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_next_to"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_weight="1"
        android:background="@color/colorPink"
        android:textColor="@color/colorWhite"
        android:minHeight="@dimen/_0dp"
        android:text="@string/next_to"
        android:textSize="@dimen/_10sp" />

</RelativeLayout>

