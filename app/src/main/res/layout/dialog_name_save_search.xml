<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="@dimen/_300dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/_20dp"
    android:paddingBottom="@dimen/_20dp"
    android:paddingRight="@dimen/_20dp"
    android:paddingLeft="@dimen/_20dp"
    android:background="@color/colorMainBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saved_search_name"
        android:textSize="@dimen/_10sp"
        android:textColor="@color/colorGrayDark"/>

    <EditText
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:id="@+id/edt_name_save_search"
        android:padding="@dimen/_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:background="@drawable/custom_edt_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center"
        android:weightSum="2"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_main"
            android:text="@string/cancel"
            android:id="@+id/btn_cancel"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_main"
            android:text="@string/confirm"
            android:id="@+id/btn_confirm"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_20dp"/>

    </LinearLayout>

</LinearLayout>