    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/nav_header_desc"
        android:src="@drawable/logo_qtc" />

</LinearLayout>
