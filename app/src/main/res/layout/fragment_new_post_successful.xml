<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16dp"
    android:orientation="vertical"
    android:background="@color/colorMainBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_product_successful"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/_10sp"
        android:layout_marginTop="100dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_marginTop="20dp">

        <Button
            android:layout_marginTop="@dimen/_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_create_account"
            android:text="@string/view_posted_product"
            android:textSize="@dimen/_8sp"
            android:layout_weight="1"
            android:id="@+id/btn_posted_post"/>

        <Button
            android:id="@+id/btn_new_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_create_account"
            android:text="@string/add_new_post"
            android:textSize="@dimen/_8sp" />

    </LinearLayout>

</LinearLayout>